<h1>Dashboard</h1>
<h2>Hello {{ name }}</h2>
{{#if posts }}
    <div class="row">
        <div class="col-xs-4">
            <h3>Title</h3>
        </div>
         <div class="col-xs-4">
            <h3>Date</h3>
        </div>
         <div class="col-xs-4">
            <h3>Status</h3>
        </div>
    </div>

    {{#each posts}}
        <div class="row">
            <div class="col-xs-4">
                <a href="/posts/{{_id}}">{{title}}</a>
            </div>
            <div class="col-xs-4">
                {{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}
            </div>
            <div class="col-xs-4">
                <span>{{status}}</span>
            </div>
        </div>
    {{/each}}

{{ else }}
<p>You have no posts</p>
{{/if}}