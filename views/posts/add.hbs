<h3>Add Post</h3>
<div class="row">
    <form action="/posts" method="POST" class="col-md-12">
        <div class="row">
            <div class="input-field">
                <input type="text" id="title" name="title" class="form-control">
                <label for="title">Title</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <select id="status" name="status" class="form-control">
                    <option value="public" selected>Public</option>
                    <option value="private">Private</option>
                </select>
                <label for="status">Status</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>Post description:</h5>
                <textarea id="textarea" name="textarea" class="form-control"></textarea>
            </div>
        </div>

        <div class="row">
            <input type="submit" value="Save" class="btn form-control">
            <a href="/dashboard" class="btn orange">Cancel</a>
        </div>
    </form>
</div>